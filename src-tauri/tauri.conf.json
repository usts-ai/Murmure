{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "murmure",
    "version": "1.3.0",
    "identifier": "com.al1x-ai.murmure",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Murmure",
                "width": 920,
                "height": 768,
                "minWidth": 870,
                "minHeight": 720
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": ["../resources/**/*"],
        "linux": {
            "appimage": {
                "files": {
                    "/usr/share/README.md": "../README.md",
                    "/usr/resources": "../resources/"
                }
            }
        }
    },
    "plugins": {
        "updater": {
            "active": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNDRTZFRDczMzY2MzI5NDEKUldSQktXTTJjKzNtUEl6Q2htQ1AvcXlWVzExOG5wYWtLUjFYWVFWUCtnQU9Qb1o3RG03VmwzakkK",
            "endpoints": [
                "https://github.com/Kieirra/murmure/releases/latest/download/latest.json"
            ],
            "windows": {
                "installMode": "passive"
            }
        }
    }
}
